{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-md mx-auto px-4 py-12">
        <h2 class="text-3xl font-bold text-center mb-8">Inscription</h2>
        <div class="bg-white shadow-md rounded-lg p-6">
            <form method="post" action="{{ path('app_register') }}" novalidate data-turbo="false">
                {{ form_start(form) }}

                <div class="mb-4">
                    {{ form_label(form.pseudo, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.pseudo, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.password, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-md transition">
                    S'inscrire
                </button>

                <div class="mt-4 text-sm text-red-600">
                    {{ form_errors(form) }}
                </div>

                {{ form_widget(form._token) }}

                {{ form_end(form, {'render_rest': false}) }}
            </form>
        </div>
    </div>
{% endblock %}
