{% extends 'base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4 py-10">
        <h1 class="text-3xl font-bold text-center mb-8">üìù Ajouter un article</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form) }}

            <div class="space-y-6">
                {% for field in form %}
                    <div>
                        {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                        {{ form_errors(field) }}
                    </div>
                {% endfor %}
            </div>

            <div class="mt-6 text-center">
                <button type="submit"
                        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                    Publier
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
