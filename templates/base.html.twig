<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <nav style="background-color: #f5f5f5; padding: 10px; margin-bottom: 20px;">
        <a href="{{ path('app_home') }}" style="margin-right: 15px;">Accueil</a>
        <a href="{{ path('app_post_list') }}" style="margin-right: 15px;">Articles</a>
        <a href="{{ path('app_profile') }}" style="margin-right: 15px;">Profil</a>

        {% if app.user %}
            <span style="margin-right: 15px;">Connecté en tant que <strong>{{ app.user.pseudo }}</strong></span>
            <a href="{{ path('app_logout') }}">Déconnexion</a>
        {% else %}
            <a href="{{ path('app_login') }}">Connexion</a>
        {% endif %}
    </nav>


    <body>
        {% block body %}{% endblock %}
    </body>
</html>
