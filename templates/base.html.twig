<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>
<nav style="background-color: #f5f5f5; padding: 10px; margin-bottom: 20px;">
    <a href="{{ path('app_home') }}" style="margin-right: 15px;">Accueil</a>
    <a href="{{ path('app_post_index') }}" style="margin-right: 15px;">Articles</a>

    {% if app.user %}
        <a href="{{ path('app_profile') }}" style="margin-right: 15px;">Profil</a>

        {% if app.user.isAdmin %}
            <a href="{{ path('admin_users') }}" style="margin-right: 15px;">Admin</a>
        {% endif %}

        <a href="{{ path('app_logout') }}">DÃ©connexion</a>
    {% else %}
        <a href="{{ path('app_login') }}" style="margin-right: 15px;">Connexion</a>
        <a href="{{ path('app_register') }}">Inscription</a>
    {% endif %}
</nav>

{% block body %}{% endblock %}
</body>
</html>
